{% block main %}

<main>
  <!-- ***** inscription flash message start ***** -->
     {% for message in app.flashes('success') %}
            <div class="alert alert-success">
               <em> {{ message }}</em>
            </div>
        {% endfor %}
         <!-- *****inscription flash message end ***** -->

{% for banner in banners %}
    <!-- ***** Main Banner Area Start ***** -->
    <div id="top" >
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4" >
                    <div class="left-content" style="background-image: url('image/top-left-bg.jpg');"  >
                        <div class="inner-content" >
                            <h4>{{banner.titre}}</h4>
                            <h6>{{banner.quote}}</h6>
                           
                        </div>
                    </div>
                </div>
                <div class="col-lg-8" >
    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel" >
  
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="{{vich_uploader_asset(banner, 'imageFile1')}}" alt="First slide" height="800px" >
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{vich_uploader_asset(banner, 'imageFile2')}}" alt="Second slide" height="800px">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{vich_uploader_asset(banner, 'imageFile3')}}" alt="Third slide" height="800px">
    </div>
  </div>
   <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
                        </div>
                    </div>
                </div>
        
    <!-- ***** Main Banner Area End ***** -->
{% endfor %}


 <!-- ***** About Area Starts ***** -->
 {% for nous in nouss %}
        <section class="section mt-5" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div class="left-text-content">
                        <div class="section-heading">
                            <h6>Apropos du nous</h6>
                            <h2>{{nous.titre}}</h2>
                        </div>
                        <p>{{nous.description[:402]}} <a href="{{path('nous')}}">savoir plus</a></p>
                        <div class="row">
                            <div class="col-4">
                                <img src="{{vich_uploader_asset(nous, 'imageFile1')}}" alt="" height="200px">
                            </div>
                            <div class="col-4">
                                <img src="{{vich_uploader_asset(nous, 'imageFile2')}}" alt="" height="200px">
                            </div>
                            <div class="col-4">
                                <img src="{{vich_uploader_asset(nous, 'imageFile3')}}" alt="" height="200px">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div class="right-content">
                        <div class="thumb">
                            <a rel="nofollow" href="{{path('nous')}}"><i class="fa fa-play"></i></a>
                            <img src="image/about-video-bg.jpg" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
