{% extends 'base.html.twig' %}
{% form_theme formContact 'bootstrap_5_layout.html.twig' %}
{% form_theme formNewsletter 'bootstrap_5_layout.html.twig' %}

{% block title %}esybel contact{% endblock %}

{% block body %}
{% block header %}{{parent()}}{% endblock %}
{% block main %}
<main > 
  
         <!-- *****  contact nous Area Starts ***** -->
    <section  class="section " id="reservation" >
        <div class="container" >
            <div class="row">
                <div class="col-lg-6 align-self-center">
                    <div class="left-text-content">
                        <div  id="contact" class="section-heading">
                            <h6>Nous contacter</h6>
                            <h2> Nous serons très heureux de répondre à toutes vos questions a bientot</h2>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="phone">
                                    <i class="fa fa-phone"></i>
                                    <h4>Telephone</h4>
                                    <span><a href="#">07 49 03 36 52</a></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="message">
                                    <i class="fa fa-envelope"></i>
                                    <h4>Emails</h4>
                                    <span><a href="#">esybel@gmail.fr</a></span>
                                </div>
                            </div>
                            <div class="row">
                         <div class="col-lg-12 mt-3">
                                <div class="message">
                                    <i class="fas fa-map-marked-alt"></i>
                                    <h4>Address</h4>
                                    <span><a href="#">14 RUE DE L'ABBE DERRY
                                Issy-les-Moulineaux</a></span>
                                <div class="mapouter"><div class="gmap_canvas"><iframe width="500" height="200" id="gmap_canvas" src="https://maps.google.com/maps?q=14%20RUE%20DE%20L'ABBE%20DERRY%20Issy-les-Moulineaux&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><br><style>.mapouter{position:relative;text-align:left;height:200px;width:600px;}</style><a href="https://www.embedgooglemap.net"></a><style>.gmap_canvas {overflow:hidden;background:none!important;height:500px;width:600px;}</style></div></div>
                                
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                   {# <!-- ***** flash message Area Starts ***** -->  
     <div class="mt-5">   
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
            <em> {{ message }}</em>          
            </div>
        {% endfor %}
         </div>  
         <!-- *****  flash message area ends ***** --> #}
                    <div class="contact-form">
                        <div class="container"> {{form(formContact)}}</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ***** conatct nous Area Ends ***** -->

</main>
{% endblock %}

{% block footer %}{{parent()}}{% endblock %}
{% endblock %}
